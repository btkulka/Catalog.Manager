@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
            <div class="container p-3">
                <div class="card">
                    <div class="card-header">
                        <h4>Register</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CreateUser", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row mb-2">
                                <div class="col-12">
                                    <h6>Credentials</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("Username")
                                    </div>
                                    <div class="col-8">
                                        @Html.TextBox("Username", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("Email")
                                    </div>
                                    <div class="col-8">
                                        @Html.TextBox("Email", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("Password")
                                    </div>
                                    <div class="col-8">
                                        @Html.Password("Password", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("Confirm Password")
                                    </div>
                                    <div class="col-8">
                                        @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row mb-2">
                                <div class="col-12">
                                    <h6>BUILDER Settings</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("BUILDER Username")
                                    </div>
                                    <div class="col-8">
                                        @Html.TextBox("BUILDERUsername", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("BUILDER Password")
                                    </div>
                                    <div class="col-8">
                                        @Html.Password("BUILDERPassword", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("Confirm BUILDER Password")
                                    </div>
                                    <div class="col-8">
                                        @Html.Password("ConfirmBUILDERPassword", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">
                                        @Html.Label("BUILDER Instance")
                                    </div>
                                    <div class="col-8">
                                        @if (((List<SelectListItem>)ViewBag.Instances).Count() > 0)
                                        {
                                            @Html.DropDownList("Instance", ((List<SelectListItem>)ViewBag.Instances), new { @class = "form-control" })
                                        }
                                        else
                                        {
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <h6>Create First BUILDER Instance</h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-4">
                                                                Name
                                                            </div>
                                                            <div class="col-8">
                                                                @Html.TextBox("InstanceName", null, new { @class = "form-control", placeholder = "My BUILDER" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="row">
                                                            <div class="col-4">
                                                                Service URL
                                                            </div>
                                                            <div class="col-8">
                                                                @Html.TextBox("ServiceAddress", null, new { @class = "form-control", placeholder = "https://extdev.digonsystems.com/webservices/CatalogManager.svc" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-12">
                                        <input type="submit" value="Register" class="btn btn-outline-info" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">

        </div>
    </div>
</div>