@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <div class="container m-3 p-3">
                <div class="card">
                    <div class="card-header">
                        <h4>Log In</h4>
                    </div>
                    <div class="card-body p-3">
                        @using (Html.BeginForm("Authenticate", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-3">
                                        @Html.Label("Username")
                                    </div>
                                    <div class="col-9">
                                        @Html.TextBox("Username", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-3">
                                        @Html.Label("Password")
                                    </div>
                                    <div class="col-9">
                                        @Html.Password("Password", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-3">
                                        <input type="submit" value="Log in" class="btn btn-outline-info" />
                                    </div>
                                    <div class="col-9">
                                        <p class="text-secondary" style="font-size: 10px;">Don't have an account? <a href="@Url.Action("Register", "Account")"> Register</a> here.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>