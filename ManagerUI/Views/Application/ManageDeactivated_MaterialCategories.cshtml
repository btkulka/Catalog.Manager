@using CatalogData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage Deactivated - Material Categories";
}

<script>

    function DeleteMaterialCategory(matCatId, desc) {
        var c = confirm("Are you sure you want to delete '" + desc + "'?")
        if (c) {
            window.location.href = "@Url.Action("MaterialCategories_Delete", "MaterialCategories")?matCatId=" + matCatId;
        }
    }

</script>

<div class="container">
    <div class="row">
        <div class="col-2">

        </div>
        <div class="col-8">
            <div class="mt-3 row justify-content-center" style="font-size:12px;">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageDeactivated_CatalogItems", "Application")">Catalog Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageDeactivated_Systems", "Application")">Systems</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageDeactivated_Components", "Application")">Components</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageDeactivated_SubComponents", "Application")">SubComponents</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageDeactivated_ComponentTypes", "Application")">Component Types</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Material Categories</a>
                    </li>
                </ul>
            </div>
            <div class="row mt-2">
                <div class="col-12 m-2">
                    <h4>Deactivated SubComponents</h4>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-12">
                    <table class="table table-striped table-hover" style="font-size:12px;">
                        <thead class="thead-dark">
                        <th>ID</th>
                        <th>Description</th>
                        <th>Restore</th>
                        <th>Delete</th>
                        </thead>
                        <tbody>
                            @if (((List<MaterialCategory>)ViewBag.DeactivatedMaterialCategories).Count() == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        There are currently no deactivated Material Categories.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (MaterialCategory matCat in ((List<MaterialCategory>)ViewBag.DeactivatedMaterialCategories))
                                {
                                    <tr>
                                        <td>
                                            @matCat.MatCatId
                                        </td>
                                        <td>
                                            @matCat.MatCatDescription
                                        </td>
                                        <td>
                                            <a href="@Url.Action("MaterialCategories_RestoreDeactivated", "MaterialCategories", new { matCatId = matCat.MatCatId })">
                                                <button class="btn btn-outline-success m-1">
                                                    <i class="fa fa-plus-circle"></i>
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-danger m-1" onclick="DeleteMaterialCategory('@matCat.MatCatId', '@matCat.MatCatDescription')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-2">

        </div>
    </div>
</div>

