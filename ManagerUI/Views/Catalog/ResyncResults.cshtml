@model ManagerUI.Models.ResyncResultViewModel
@using ManagerUI.Models.ResyncAnnotations

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.BuilderInstance.Name + " Resync Results";
}

<div class="container">
    <div class="row">
        <div class="col-1">
            <a href="@Url.Action("ManageBuilderInstances", "Applcation")">
                <input type="button" class="btn btn-outline-info m-3" value="Back" />
            </a>
        </div>
        <div class="col-10">
            <div class="row m-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>@Model.BuilderInstance.Name Resync Results</h4>
                        </div>
                        <div class="card-body">
                            <div class="row m-3">
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Summary - Items Updated</h6>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <strong>Catalog Items: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.CatalogItemResults.Count()
                                    </div>
                                    <div class="col-3">
                                        <strong>Systems: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.SystemResults.Count()
                                    </div>
                                    <div class="col-3">
                                        <strong>Components: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.ComponentResults.Count()
                                    </div>
                                    <div class="col-3">
                                        <strong>SubComponents: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.SubComponentResults.Count()
                                    </div>
                                    <div class="col-3">
                                        <strong>Material Categories: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.MatCatResults.Count()
                                    </div>
                                    <div class="col-3">
                                        <strong>Component Types: </strong>
                                    </div>
                                    <div class="col-3">
                                        @Model.ComponentTypeResults.Count()
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>Catalog Items</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped table-dark table-hover">
                                                <thead class="thead-dark">
                                                    <th>CMCID</th>
                                                    <th>Component Id</th>
                                                    <th>Material Category Id</th>
                                                    <th>Component Type Id</th>
                                                    <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach(CatalogItemAnnotation ann in Model.CatalogItemResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.CatalogItem.CMCID</td>
                                                            <td>@ann.CatalogItem.ComponentId</td>
                                                            <td>@ann.CatalogItem.MaterialCategoryId</td>
                                                            <td>@ann.CatalogItem.ComponentTypeId</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>Systems</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-dark table-striped table-hover">
                                                <thead class="thead-dark">
                                                <th>System Id</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach (SystemAnnotation ann in Model.SystemResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.System.SystemId</td>
                                                            <td>@ann.System.SystemDescription</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>Components</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-dark table-striped table-hover">
                                                <thead class="thead-dark">
                                                <th>Component Id</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach (ComponentAnnotation ann in Model.ComponentResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.Component.ComponentId</td>
                                                            <td>@ann.Component.Description</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>SubComponents</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-dark table-striped table-hover">
                                                <thead class="thead-dark">
                                                <th>SubComponent Id</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach (SubComponentAnnotation ann in Model.SubComponentResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.SubComponent.SubComponentId</td>
                                                            <td>@ann.SubComponent.SubComponentDescription</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>Material Categories</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-dark table-striped table-hover">
                                                <thead class="thead-dark">
                                                <th>Material Category Id</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach (MaterialCategoryAnnotation ann in Model.MatCatResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.MaterialCategory.MatCatId</td>
                                                            <td>@ann.MaterialCategory.MatCatDescription</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row m-3">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-12">
                                            <h6>Component Types</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-dark table-striped table-hover">
                                                <thead class="thead-dark">
                                                <th>Component Type Id</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    @foreach (ComponentTypeAnnotation ann in Model.ComponentTypeResults)
                                                    {
                                                        <tr>
                                                            <td>@ann.ComponentType.CompTypeId</td>
                                                            <td>@ann.ComponentType.CompTypeDescription</td>
                                                            <td>@ann.Annotation</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
</div>

