@model CatalogData.BUILDERInstance
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Catalog Manager - Resync";
}


<div class="container">
    <div class="row">
        <div class="col-1">
            <a href="@Url.Action("ManageBuilderInstances", "Application")">
                <input type="button" class="btn btn-outline-info m-3" value="Back" />
            </a>
        </div>
        <div class="col-10">
            <div class="row m-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4><i class="fa fa-building"></i>@Model.Name - Resync</h4>
                            <h6>Last synced: @Model.LastSynced</h6>
                        </div>
                        <div class="card-body justify-content-center text-center">
                            Resyncing will take a few minutes.
                            <br />
                            <a href="@Url.Action("ResyncResults", "Catalog", new { builderId = Model.Id })">
                                <input type="button" class="btn btn-outline-info m-3" value="Resync" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
</div>